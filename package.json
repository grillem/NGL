{
  "name": "ngl-project",
  "version": "1.0.0",
  "description": "NGL project with modular structure",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch-less\" \"npm run serve\"",
    "serve": "live-server --port=3000 --open=/pages/home/",
    "watch-less": "npm-watch",
    "build-less": "lessc src/less/style.less dist/css/style.css",
    "build-less-compressed": "lessc src/less/style.less dist/css/style.min.css --compress",
    "build": "npm run build-less && npm run build-less-compressed"
  },
  "watch": {
    "build-less": {
      "patterns": [
        "src/less/**/*.less",
        "modules/**/*.less"
      ],
      "extensions": "less"
    }
  },
  "devDependencies": {
    "less": "^4.1.3",
    "live-server": "^1.2.2",
    "concurrently": "^7.6.0",
    "npm-watch": "^0.11.0"
  },
  "keywords": [
    "less",
    "modular",
    "web development"
  ],
  "author": "",
  "license": "MIT"
}
